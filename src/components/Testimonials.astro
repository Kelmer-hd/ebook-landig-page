<section class="mb-16">
  <h2 class="text-3xl font-bold text-center mb-12">Lo que dicen nuestros lectores</h2>
  <div class="grid md:grid-cols-3 gap-6">
    {testimonials.map(testimonial => (
      <div class="bg-blue-900/30 p-6 rounded-xl hover:transform hover:scale-105 transition-all">
        <p class="text-lg italic mb-6">"{testimonial.quote}"</p>
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full"></div>
          <div>
            <p class="font-semibold">{testimonial.author}</p>
            <p class="text-sm text-gray-400">{testimonial.position}</p>
          </div>
        </div>
      </div>
    ))}
